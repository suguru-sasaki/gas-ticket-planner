{
  "name": "gas-ticket-planner",
  "version": "1.0.0",
  "description": "Google Apps Script based ticket management and Gantt chart visualization",
  "main": "dist/main.js",
  "scripts": {
    "clean": "rm -rf dist",
    "prebuild": "npm run clean && mkdir -p dist",
    "build": "node esbuild.config.mjs && cp appsscript.json dist/ && cp html/*.html dist/",
    "build:tsc": "tsc && cp appsscript.json dist/ && cp html/*.html dist/",
    "build:watch": "tsc --watch",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "typecheck": "tsc --noEmit -p tsconfig.test.json",
    "check": "npm run lint && npm run typecheck",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "env:dev": "cp .clasp.dev.json .clasp.json",
    "env:prod": "cp .clasp.prod.json .clasp.json",
    "push:dev": "npm run env:dev && npm run build && clasp push",
    "push:prod": "npm run env:prod && npm run build && clasp push",
    "open:dev": "npm run env:dev && clasp open",
    "open:prod": "npm run env:prod && clasp open",
    "clasp:login": "clasp login",
    "clasp:logout": "clasp logout"
  },
  "keywords": [
    "google-apps-script",
    "gas",
    "spreadsheet",
    "gantt",
    "ticket-management"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/google-apps-script": "^1.0.83",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.19",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "esbuild": "^0.27.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@google/clasp": "^2.4.2"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
